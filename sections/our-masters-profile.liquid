<div class="profile">

  <img src="{{ section.settings.user_img | img_url: '300*300' }}" alt="">

  <h3>
    {{ section.settings.user_name }}
  </h3>

  <p>
    {{ section.settings.user_bio }}
  </p>
</div>

{% schema %}
  {
    "name": "Masters profile",

    "settings": [
      {
        "type": "image_picker",
        "id": "user_img",
        "label": "User Photo"
      }, {
        "type": "text",
        "id": "user_name",
        "label": "User Name"
      }, {
        "type": "richtext",
        "id": "user_bio",
        "label": "User Bio"
      }
    ],

    "presets": [
      {
        "category": "Our Masters",
        "name": "masters-profile"

      }
    ]
  }
{% endschema %}